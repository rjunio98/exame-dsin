generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Servico {
  id           Int           @id @default(autoincrement())
  nome         String
  preco        Float
  agendamentos Agendamento[]
}

model Agendamento {
  id        Int      @id @default(autoincrement())
  servico   Servico  @relation(fields: [servicoId], references: [id])
  servicoId Int
  dataHora  DateTime
  status    String
  cliente   String
}
